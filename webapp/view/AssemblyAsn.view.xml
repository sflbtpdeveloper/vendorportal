<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    controllerName="zmmsubcontract.controller.AssemblyAsn"
>
    <Page
        id="asseASN"
        showFooter="true"
        showHeader="false"
    >
        <content>
            <HBox
                width="100%"
                alignItems="Center"
                justifyContent="SpaceBetween"
            >
                <Image
                    src="/images/sfllogoonly.png"
                    alt="Company Logo"
                    densityAware="false"
                    width="4rem"
                />
                <VBox
                    alignItems="Center"
                    width="100%"
                >
                    <Title
                        text="Sundram Fasteners Limited"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiMediumMarginTop"
                    />

                    <Title
                        text="Assembly ASN Creation"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop subTitle"
                    />
                </VBox>
                <HBox width="4rem" />
            </HBox>

            <Toolbar>
                <SearchField
                    id="idFilPlant1"
                    width="20%"
                    placeholder="Search Plant"
                    liveChange="onPlant"
                />

                <SearchField
                    id="idFilDA1"
                    width="20%"
                    placeholder="Search DA"
                    liveChange="onDA"
                />
                <SearchField
                    id="idFilVen1"
                    width="20%"
                    placeholder="Search Vendor"
                    liveChange="onVendor"
                />

                <SearchField
                    id="idMat1"
                    width="20%"
                    placeholder="Search Material"
                    liveChange="onMat"
                />
                <SearchField
                    id="idPO1"
                    width="20%"
                    placeholder="Search PO"
                    liveChange="onPO"
                />
                <ToolbarSpacer />
                <Button
                    text="Change Material"
                    press="onChangeMat"
                    type="Critical"
                />
                <Button
                    text="Create ASN"
                    press="onCreateASN"
                    type="Success"
                    class="pulsatingButton"
                />
            </Toolbar>

            <ScrollContainer
                width="100%"
                height="100%"
                horizontal="true"
                vertical="true"
            >
                <Table
                    id="idasseASN"
                    items="{default>/}"
                    growing="true"
                    mode="MultiSelect"
                    selectionChange="captureRecordEH"
                    includeItemInSelection="true"
                    fixedLayout="false"
                    class="myTableWithBackground"
                    sticky="ColumnHeaders"
                    width="auto"
                >
                    <columns>
                        <Column>
                            <Label text="DA Number" />
                        </Column>
                        <Column>
                            <Label
                                text="DA Date"
                                visible="false"
                            />
                        </Column>
                        <Column>
                            <Label text="Plant" />
                        </Column>
                        <Column>
                            <Label text="Vendor" />
                        </Column>
                        <Column>
                            <Label text="Output Part Number" />
                        </Column>
                        <Column>
                            <Label text="Input Part Number" />
                        </Column>
                        <Column>
                            <Label text="No of Days" />
                        </Column>
                        <Column>
                            <Label text="PO Number" />
                        </Column>
                        <Column>
                            <Label text="Unit of Measure" />
                        </Column>
                        <Column>
                            <Label text="Balance Quanity" />
                        </Column>
                        <Column>
                            <Label text="Material Weight" />
                        </Column>
                        <Column>
                            <Label text="Preview PDF" />
                        </Column>
                        <Column>
                            <Label
                                text="Invoice Number"
                                visible="false"
                            />
                        </Column>
                        <Column>
                            <Label
                                text="Invoice Item"
                                visible="false"
                            />
                        </Column>
                        <Column>
                            <Label
                                text="Ex Year"
                                visible="false"
                            />
                        </Column>
                        <!-- <Column>
									<Label text="Order Price Unit(Purchasing)"/>
								</Column>
								<Column>
									<Label text="PO Number"/>
								</Column>
								<Column>
									<Label text="PO Item"/>
								</Column>																								                      -->
                    </columns>
                    <items>
                        <ColumnListItem id="idRegTemp">
                            <cells>
                                <Text
                                    text="{default>Exnum}"
                                    class="boldtext"
                                />
                                <Text
                                    text="{default>Exdat}"
                                    visible="false"
                                />
                                <Text text="{default>Werks}" />
                                <Text text="{default>Lifnr}" />
                                <VBox>
                                    <Text
                                        text="{default>Op_matnr}"
                                        class="boldtext"
                                    />
                                    <Text
                                        text="{default>Maktx}"
                                        class="smallfont"
                                    />
                                </VBox>
                                <Text text="{default>Ip_Matnr}" />
                                <Text text="{default>noOfDays}" />
                                <VBox>
                                    <Text
                                        text="{default>Ebeln}"
                                        class="boldtext"
                                    />
                                    <Text
                                        text="{default>Ebelp}"
                                        class="smallfont"
                                    />
                                </VBox>

                                <Button text="{default>Meins}" />
                                <Text text="{default>Balqty}" />
                                <Text text="{default>Weight}" />
                                <Button
                                    text="PDF"
                                    press="onPreviewPDF"
                                />
                                <Text
                                    text="{default>Exyear}"
                                    visible="false"
                                />
                                <!-- <Text text="{bprme}" />   -->
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
